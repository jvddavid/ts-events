{
  "name": "@jvddavid/ts-events",
  "version": "0.0.3",
  "license": "MIT",
  "description": "A events implementation for typescript",
  "keywords": [
    "typescript",
    "events",
    "event-emitter"
  ],
  "author": {
    "name": "Jo√£o Victor Davi de Oliveira",
    "email": "j.victordavid2@gmail.com",
    "url": "https://github.com/jvddavid/ts-events"
  },
  "repository": {
    "type": "git",
    "url": "git+github.com:jvddavid/ts-events.git"
  },
  "bugs": {
    "email": "j.victordavid2@gmail.com",
    "url": "https://github.com/jvddavid/ts-events/issues"
  },
  "type": "commonjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@stylistic/eslint-plugin": "^2.7.2",
    "@types/node": "^22.5.4",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "pkgroll": "^2.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "prepublishOnly": "npm run type:check && npm run lint && npm run build && npm run test",
    "start": "node dist/index.mjs",
    "type:check": "tsc --noEmit",
    "build": "pkgroll --clean-dist --minify --target=es2023 --target=node20",
    "lint": "eslint src tests",
    "lint:fix": "eslint --fix src tests",
    "dev": "tsx --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {},
  "optionalDependencies": {}
}
